FUNCTION calculateStringValue RETURNS CHARACTER
  ( /* parameter-definitions */ ) :
/*------------------------------------------------------------------------------
  Purpose:  
    Notes:  
------------------------------------------------------------------------------*/
    DEFINE VARIABLE cStringValue              AS CHARACTER             NO-UNDO.
    DEFINE variable hRowObject                as handle                no-undo.
    DEFINE variable hField                    as handle                no-undo.
    DEFINE variable iDataType                 as integer               no-undo.
    
    {get RowObject hRowObject}.
    
    iDataType = hRowObject:buffer-field('data_type'):buffer-value.
    
    CASE iDataType:
       WHEN {&LOGICAL-DATA-TYPE}   THEN cStringValue = string(hRowObject:buffer-field('logical_value'):buffer-value).
       WHEN {&INTEGER-DATA-TYPE}   THEN cStringValue = string(hRowObject:buffer-field('integer_value'):buffer-value).
       WHEN {&HANDLE-DATA-TYPE}    THEN cStringValue = string(?).
       WHEN {&DECIMAL-DATA-TYPE}   THEN cStringValue = string(hRowObject:buffer-field('decimal_value'):buffer-value).       
       WHEN {&RAW-DATA-TYPE}       THEN cStringValue = string(hRowObject:buffer-field('raw_value'):buffer-value).
       WHEN {&DATE-DATA-TYPE}      THEN cStringValue = string(hRowObject:buffer-field('date_value'):buffer-value).
       WHEN {&RECID-DATA-TYPE}     THEN
           assign cStringValue = string(hRowObject:buffer-field('integer_value'):buffer-value)
                  cStringValue = ? when integer(cStringValue) eq 0
                  no-error.
       /* includes char and rowid datatypes */
       OTHERWISE cStringValue = string(hRowObject:buffer-field('character_value'):buffer-value).
    END CASE.   /* data type */

    RETURN cStringValue.
END FUNCTION.   /* calculateStringValue */

